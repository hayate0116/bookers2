<div class="container">
  <div class= "row">
    
    <div class= "col-md-3">
      <h2>User info</h2>
     <%= render 'info', user: current_user %>
     
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title %>
        <h6>Opinion</h6>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book',class: "btn btn-success" %>
      <% end %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table'>
        <th>image</th>
        <th>name</th>
        <th></th>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:"80x80" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>