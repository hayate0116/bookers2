      <table class='table'>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>

        <% @books.each do |book| %>
          <%= link_to user_path(@user.id) do %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image, size:"80x80" %>
              <% end %>
            </td>
            <td><%=link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        <% end %>
      </table>